<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Booking</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">
  <div class="container py-5">
    <h2>Edit Booking</h2>
    <form action="/bookings/edit/<%= booking.booking_id %>" method="POST" class="card p-4">
      
      <div class="mb-3">
        <label for="facility_id" class="form-label">Facility</label>
        <select name="facility_id" id="facility_id" class="form-select" required>
          <% facilities.forEach(f => { %>
            <option value="<%= f.facilities_id %>" <%= f.facilities_id === booking.facility_id ? "selected" : "" %>>
              <%= f.name %>
            </option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label for="timeslot_id" class="form-label">Time Slot</label>
        <select name="timeslot_id" id="timeslot_id" class="form-select" required>
          <% timeslots.forEach(t => { %>
            <option value="<%= t.time_slot_id %>" <%= t.time_slot_id === booking.timeslot_id ? "selected" : "" %>>
              <%= new Date(t.date).toDateString() %>
            </option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label for="booking_date" class="form-label">Booking Date</label>
        <input 
          type="date" 
          class="form-control" 
          name="booking_date" 
          id="booking_date" 
          value="<%= booking.booking_date.toISOString().split('T')[0] %>" 
          required 
        />
      </div>

      <button type="submit" class="btn btn-primary">Update</button>
      <a href="/bookings" class="btn btn-secondary">Cancel</a>
    </form>
  </div>
</body>
</html>