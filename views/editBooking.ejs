<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Booking</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Rental Facilities</a>
  </div>
</nav>

<div class="container py-5">
  <h2 class="mb-4">Edit Booking</h2>

  <form action="/bookings/edit/<%= booking.booking_id %>" method="POST" class="needs-validation" novalidate>
    <div class="mb-3">
      <label class="form-label">Facility</label>
      <select name="facilities_id" class="form-select" required>
        <% facilities.forEach(f => { %>
          <option value="<%= f.facilities_id %>" <%= booking.facilities_id === f.facilities_id ? 'selected' : '' %>><%= f.name %></option>
        <% }) %>
      </select>
    </div>

    <div class="mb-3">
      <label class="form-label">Time Slot</label>
      <select name="time_slot_id" class="form-select" required>
        <% timeslots.forEach(ts => { %>
          <option value="<%= ts.time_slot_id %>" <%= booking.time_slot_id === ts.time_slot_id ? 'selected' : '' %>><%= ts.label %></option>
        <% }) %>
      </select>
    </div>

    <div class="mb-3">
      <label class="form-label">Booking Date</label>
      <input type="date" name="booking_date" class="form-control" value="<%= booking.booking_date.toISOString().split('T')[0] %>" required>
    </div>

    <button type="submit" class="btn btn-success">Update Booking</button>
    <a href="/bookings" class="btn btn-secondary">Cancel</a>
  </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
