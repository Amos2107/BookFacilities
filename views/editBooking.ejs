<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Booking</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">
  <div class="container py-5">
    <h2>Edit Booking</h2>
    <form action="/bookings/edit/<%= booking.booking_id %>" method="POST" class="card p-4">
      
      <div class="mb-3">
        <label for="facilities_id" class="form-label">Facility</label>
        <select name="facilities_id" id="facilities_id" class="form-select" required>
          <% facilities.forEach(f => { %>
            <option value="<%= f.facilities_id %>" <%= f.facilities_id === booking.facilities_id ? "selected" : "" %>>
              <%= f.name %>
            </option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label for="time_slot_id" class="form-label">Time Slot</label>
        <select name="time_slot_id" class="form-select" required>
  <option value="">Select Time Slot</option>
  <% timeslots.forEach(slot => { %>
    <option value="<%= slot.time_slot_id %>">
      <%= slot.start_time.slice(0,5) %> – <%= slot.end_time.slice(0,5) %>
    </option>
  <% }) %>
</select>
      </div>

      <div class="mb-3">
        <label for="booking_date" class="form-label">Booking Date</label>
        <input 
          type="date" 
          class="form-control" 
          name="booking_date" 
          id="booking_date" 
          value="<%= booking.booking_date.toISOString().split('T')[0] %>" 
          required 
        />
      </div>

      <button type="submit" class="btn btn-primary">Update</button>
      <a href="/bookings" class="btn btn-secondary">Cancel</a>
    </form>
  </div>
</body>
</html>