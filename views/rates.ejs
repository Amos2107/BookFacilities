      </label>
      
      <label>Rate Amount ($):
        <input type="number" name="rate_amount" step="0.01" 
               value="<%= rates.find(r => r.day_type === 'weekday' && r.rate_type === 'off-peak').rate_amount %>" 
               required>
      </label>
      
      <button type="submit">Update Weekday Off-Peak</button>
    </form>
  </div>

  <!-- Weekend Peak -->
  <div class="rate-card">
