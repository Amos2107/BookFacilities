<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Rental Facilities App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Rental Facilities</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="/addFacilities">Add new Facilities</a>
          </li> 
        </ul>
        <ul class="navbar-nav">
          <% if (user) { %>
            <li class="nav-item">
              <span class="navbar-text text-white me-3">Hello, <%= user.username %></span>
            </li>
            <li class="nav-item">
              <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a href="/register" class="btn btn-outline-light btn-sm me-2">Register</a>
            </li>
            <li class="nav-item">
              <a href="/login" class="btn btn-outline-light btn-sm">Login</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Container -->
  <div class="container mt-5">
    <h1 class="text-center mb-4">Welcome to our Rental Facilities App</h1>

    <% if (messages && messages.length > 0) { %>
      <div class="alert alert-success">
        <% messages.forEach(function(message) { %>
          <p><%= message %></p>
        <% }); %>
      </div>
    <% } %>

    <h2 class="text-center mt-5">Facilities from Rental App Database</h2>

    <div class="table-responsive mt-4">
      <table class="table table-hover small text-center">
        <thead class="table-dark">
          <tr>
            <th scope="col" width="100">Facility Name</th>
            <th scope="col" width="100">Facility Image</th>
            <th scope="col" width="100">Description</th>
            <th scope="col" width="50">Location</th>
            <th scope="col" width="50">Capacity</th>
            <th scope="col" width="100">Group</th>
            <th scope="col" width="50">Edit</th>
            <th scope="col" width="50">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% if (facilities && facilities.length > 0) { %>
            <% for(let i=0; i < facilities.length; i++) { %>
              <tr>
                <td><a href="/facilities/<%= facilities[i].facilities_id %>"><%= facilities[i].name %></a></td>
                <td><img src="/images/<%= facilities[i].image %>" width="100" alt="<%= facilities[i].name %>"></td>
                <td><%= facilities[i].description %></td>
                <td><%= facilities[i].location %></td>
                <td><%= facilities[i].capacity %></td>
                <td><%= facilities[i].facilities_group %></td>
                <td><a class="btn btn-warning btn-sm" href="/editFacilities/<%= facilities[i].facilities_id %>">Edit</a></td>
                <td>
                  <a class="btn btn-danger btn-sm" href="/deleteFacilities/<%= facilities[i].facilities_id %>" onclick="return confirm('Are you sure you want to delete this facility?')">Delete</a>
                </td>
              </tr>
            <% } %>
          <% } else { %>
            <tr>
              <td colspan="8">No facilities available.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
