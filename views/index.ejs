<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Home - Rental Facilities</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .zoom-img {
      transition: transform 0.3s ease-in-out;
    }
 
    .zoom-img:hover {
      transform: scale(1.05);
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Rental Facilities</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <% if (user && user.role === 'admin') { %>
            <li class="nav-item"><a class="nav-link" href="/addFacilities">Add Facility</a></li>
            <li class="nav-item"><a class="nav-link" href="/admin/users">Manage Users</a></li>
          <% } %>
          <% if (user) { %>
            <li class="nav-item"><a class="nav-link" href="/bookings/create">Book Now</a></li>
            <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
          <% } else { %>
            <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
            <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <% if (user) { %>
  <div class="container mt-5 text-center">
    <h2>Welcome, <%= user.username %>!</h2>
  </div>
  <% } else { %>
  <div class="container mt-5 text-center">
    <h2>Welcome to Rental Facilities!</h2>
  </div>
  <% } %>

  <div class="container mt-4">
    <!-- Filter Form -->
    <form class="row mb-4" method="GET" action="/filter">
      <div class="col-md-4">
        <input type="text" class="form-control" name="keyword" placeholder="Search by name">
      </div>
      <div class="col-md-4">
        <select class="form-select" name="group">
          <option value="">All Groups</option>
          <option value="Entertainment">Entertainment</option>
          <option value="Meeting">Meeting</option>
          <option value="Gym">Gym</option>
          <option value="Rest">Rest</option>
        </select>
      </div>
      <div class="col-md-4">
        <button class="btn btn-primary" type="submit">Search / Filter</button>
      </div>
    </form>

    <% if (facilities.length === 0) { %>
      <p class="text-center">No facilities available.</p>
    <% } else { %>
      <div class="row">
        <% facilities.forEach(facility => { %>
          <div class="col-sm-6 col-md-4 mb-4">
            <div class="card" style="width: 100%;">
              <img class="card-img-top zoom-img" src="/images/<%= facility.image %>" alt="Facility Image" style="height: 200px; object-fit: cover;">
              <div class="card-body">
                <h4 class="card-title">
                  <a href="/facilities/<%= facility.facilities_id %>"><%= facility.name %></a>
                </h4>
                <p class="card-text"><%= facility.description %></p>
                <p class="card-text"><strong>Location:</strong> <%= facility.location %></p>
                <p class="card-text"><strong>Capacity:</strong> <%= facility.capacity %></p>
                <p class="card-text"><strong>Group:</strong> <%= facility.facilities_group %></p>

                <% if (user && user.role === 'admin') { %>
                  <a href="/editFacilities/<%= facility.facilities_id %>" class="btn btn-warning btn-sm">Edit</a>
                  <a href="/deleteFacilities/<%= facility.facilities_id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this facility?')">Delete</a>
                <% } %>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>
</body>
</html>