<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Manage Members</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2>Manage Members</h2>

    <% if (messages.length > 0) { %>
      <div class="alert alert-success"><%= messages %></div>
    <% } %>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Role</th>
          <th>Change Role</th>
        </tr>
      </thead>
      <tbody>
        <% members.forEach(member => { %>
          <tr>
            <td><%= member.username %></td>
            <td><%= member.email %></td>
            <td><%= member.role %></td>
            <td>
              <form method="POST" action="/admin/members/<%= member.id %>/role" class="d-flex gap-2">
                <select name="role" class="form-select form-select-sm" style="width: auto;">
                  <option value="user" <%= member.role === 'user' ? 'selected' : '' %>>User</option>
                  <option value="admin" <%= member.role === 'admin' ? 'selected' : '' %>>Admin</option>
                </select>
                <button type="submit" class="btn btn-primary btn-sm">Update</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <a href="/admin" class="btn btn-secondary">Back to Admin Dashboard</a>
  </div>
</body>
</html>
