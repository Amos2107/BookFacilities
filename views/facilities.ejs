<%- include('partials/header', { user: user, messages: messages }) %>

<h2><%= facility.name %></h2>

<div class="card mb-4">
  <img src="/images/<%= facility.image %>" class="card-img-top" />
  <div class="card-body">
    <p class="card-text"><%= facility.description %></p>

    <% if (user && user.role === 'admin') { %>
      <a href="/facilities/edit/<%= facility.facilities_id %>" class="btn btn-warning">Edit</a>
      <form method="POST" action="/facilities/delete/<%= facility.facilities_id %>" class="d-inline" onsubmit="return confirm('Are you sure?')">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
    <% } %>
  </div>
</div>

<a href="/" class="btn btn-secondary">Back</a>

<%- include('partials/footer') %>
