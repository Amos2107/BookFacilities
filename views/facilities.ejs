<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Rental Facilities App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Rental Facilities</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/addFacilities">Add new Facility</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>
    
    <div class="container">
        <br>
        <div class="text-center"><h2>Facility Details</h2></div>
        <br>
        <% if (facilities) { %> <!-- Check if product data exists -->
            <div>
                <p><b>Product Name:</b><br> <%= facilities.name %></p>
                <p><b>Product Image:</b><br> <img src = "/images/<%= facilities.image %>" width="20%"></p>
                <p><b>Product Description:</b><br> <%= facilities.description %></p>
                <p><b>Product Location:</b><br> <%= facilities.location %></p>
                <p><b>Product Capacity:</b><br> <%= facilities.capacity %></p>
                <p><b>Product Group:</b><br> <%= facilities.facilities_group %></p>
            </div>
        <% } else { %>
            <p>No Facility found.</p>
        <% } %>
        <a href ="/">Back</a>
    </div>
    
</body>
</html>
