<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Available Time Slots</title>
  <style>
    .slot-card {
      transition: all 0.3s ease;
      border-left: 5px solid #28a745;
    }
    .slot-card:hover {
      transform: translateY(-3px);
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .facility-badge {
      font-size: 0.9rem;
      background-color: #6c757d;
    }
    .filter-section {
      background-color: #f8f9fa;
      border-radius: 8px;
      padding: 20px;
      margin-bottom: 30px;
    }
  </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Facility Booking System</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <% if (!user) {%>
                <li class="nav-item">
                    <a class="nav-link" href="/register">Register</a>
                </li> 
                <li class="nav-item">
                    <a class="nav-link" href="/login">Login</a>
                </li> 
            <% } else { %>
                <li class="nav-item">
                    <a class="nav-link" href="/timeslots">All Slots</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/timeslots/available">Available Slots</a>
                </li>
                <% if (user.role === 'admin') { %>
                <li class="nav-item">
                    <a class="nav-link" href="/timeslots/add">Add Slot</a>
                </li>
                <% } %>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li> 
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
        <% if (messages.error) { %>
            <div class="alert alert-danger alert-dismissible fade show">
                <%= messages.error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <h2 class="mb-4">Available Time Slots</h2>
        
        <!-- Filter Section -->
        <div class="filter-section mb-4">
            <form method="GET" action="/timeslots/available">
                <div class="row g-3">
                    <div class="col-md-5">
                        <label for="date" class="form-label">Date</label>
                        <input type="date" class="form-control" id="date" name="date" 
                               value="<%= selectedDate || '' %>">
                    </div>
                    <div class="col-md-5">
                        <label for="facility_id" class="form-label">Facility</label>
                        <select class="form-select" id="facility_id" name="facility_id">
                            <option value="">All Facilities</option>
                            <% facilities.forEach(facility => { %>
                                <option value="<%= facility.facility_id %>" 
                                    <%= selectedFacility == facility.facility_id ? 'selected' : '' %>>
                                    <%= facility.facility_name %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Filter</button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Available Slots Display -->
        <% if (availableSlots.length > 0) { %>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                <% availableSlots.forEach(slot => { %>
                <div class="col">
                    <div class="card h-100 slot-card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <span class="badge facility-badge me-2"><%= slot.facility_name %></span>
                                <%= slot.start_time %> - <%= slot.end_time %>
                            </h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                <%= new Date(slot.date).toLocaleDateString('en-US', { 
                                    weekday: 'short', 
                                    year: 'numeric', 
                                    month: 'short', 
                                    day: 'numeric' 
                                }) %>
                            </h6>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="badge bg-success">Available</span>
                                <% if (user) { %>
                                    <!-- This would link to the booking system (handled by another team) -->
                                    <a href="#" class="btn btn-sm btn-outline-primary">Request Booking</a>
                                <% } else { %>
                                    <a href="/login" class="btn btn-sm btn-outline-secondary">Login to Book</a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="alert alert-info">
                No available time slots found <% if (selectedDate || selectedFacility) { %>for the selected filters<% } %>.
                <% if (selectedDate || selectedFacility) { %>
                    <a href="/timeslots/available" class="alert-link">Clear filters</a> to see all available slots.
                <% } %>
            </div>
        <% } %>
    </div>

    <script>
        // Set default date to today if no date selected
        document.addEventListener('DOMContentLoaded', function() {
            const dateInput = document.getElementById('date');
            if (!dateInput.value) {
                const today = new Date().toISOString().split('T')[0];
                dateInput.value = today;
            }
        });
    </script>
</body>
</html>